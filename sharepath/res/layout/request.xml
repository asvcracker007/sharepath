<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FROM:" />

        <AutoCompleteTextView id="@+id/from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="&lt;&lt;HERE&gt;&gt;" />

	    <Button id="@+id/here"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="HERE" />
    </LinearLayout>
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dip"
        android:fadingEdge="horizontal">

		<view id="@+id/mapview"
			class="com.google.android.maps.MapView"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1" />
			
	    <LinearLayout
	        android:orientation="horizontal"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content">
		    <Button id="@+id/zoomin"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="ZOOM IN"
		        android:layout_weight="1" />
		    <Button id="@+id/zoomout"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="ZOOM OUT"
		        android:layout_weight="1" />
	    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO:" />

        <AutoCompleteTextView id="@+id/to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

	    <Button id="@+id/idioms"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="IDIOMS" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

	    <Button id="@+id/send"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="SEND"
	        android:layout_weight="1" />
	    <Button id="@+id/save"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="SAVE"
	        android:layout_weight="1" />
	    <Button id="@+id/cancel"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="CANCEL"
	        android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
